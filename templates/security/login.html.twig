{% extends 'base.html.twig' %}

{% block title 'Se connecter'  %}

{% block body %}
<div class="container">

    {% if error %}
        <div class="alert alert-danger"> {{ error.messageKey | trans(error.messagedata, 'security') }}</div>
    {% endif %}

    <form method="post" action="{{ path('login') }}" class="form-horizontal" >
        <div class="form-group">
            <label for="username">Username</label>
            <input id="username" name="_username" type="text" class="form-control" value="{{ lastUsername }}" >
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input id="password" name="_password" type="password" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary btn-lg">Se connecter</button>
    </form>

</div>

{% endblock %}
